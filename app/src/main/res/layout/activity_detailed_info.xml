<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.albait.myfirstapp.programasanjuans.DetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detailed_info"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="@dimen/abc_action_bar_default_height_material"/>

    <ScrollView
        android:id="@+id/detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:id="@+id/linearlayout_forimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/abc_action_bar_default_height_material"
                >

                <TextView
                    android:id="@+id/detail_title"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textColor="@color/pure_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                >

                <ImageView
                    android:id="@+id/icon_time"
                    android:src="@drawable/ic_access_time_black_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginStart="28dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/detail_time"
                    android:text="Hora"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textColor="@color/pure_black"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/place_clickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/abc_action_bar_default_height_material"
            >

                <Button
                    android:id="@+id/detail_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_place_black_36dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/pure_black"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/detail_information"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pure_black"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@drawable/detail_textview"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
